{
  "name": "ROS2 Rust Dev Container",
  "remoteUser": "root",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": ["-v", ".:/workspace", "--network=host"],
  "overrideCommand": true,
  "postStartCommand": ". /entrypoint.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer"
      ]
    }
  }
}